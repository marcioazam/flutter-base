# =============================================================================
# Flutter Base 2025 - Environment Configuration Template
# =============================================================================
# SECURITY: Copy this file to .env.{environment} and fill in real values
# NEVER commit actual secrets to version control
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_BASE_URL=https://api.example.com/api/v1
APP_NAME=Flutter App

# -----------------------------------------------------------------------------
# Certificate Pinning (OWASP MASVS MSTG-NETWORK-4)
# -----------------------------------------------------------------------------
# Enable certificate pinning (REQUIRED in production)
CERT_PIN_ENABLED=true

# Primary certificate pin (SHA-256 SPKI hash)
# Format: sha256/base64EncodedHash
# How to obtain: See docs/security/CERTIFICATE_PINNING.md
CERT_PIN_PRIMARY=sha256/AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

# Backup certificate pin (REQUIRED for rotation)
# Generate a backup key pair and pin both certificates
CERT_PIN_BACKUP=sha256/BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=

# Allow bad certificates (DANGER: Only for development/testing)
# MUST be false in production
CERT_PIN_ALLOW_BAD=false

# -----------------------------------------------------------------------------
# gRPC Configuration
# -----------------------------------------------------------------------------
# gRPC server host (defaults based on environment if not set)
GRPC_HOST=grpc.example.com

# gRPC server port (443 for TLS, 50051 for insecure)
GRPC_PORT=443

# Enable TLS for gRPC connections (REQUIRED in production)
GRPC_USE_TLS=true

# gRPC call timeout in seconds
GRPC_TIMEOUT_SECONDS=30

# Maximum retry attempts for failed gRPC calls
GRPC_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_DEBUG_LOGGING=false

# -----------------------------------------------------------------------------
# Optional: Third-party Services (add as needed)
# -----------------------------------------------------------------------------
# SENTRY_DSN=
# FIREBASE_PROJECT_ID=
# STRIPE_PUBLISHABLE_KEY=

# -----------------------------------------------------------------------------
# Optional: API Keys (use secure storage in production)
# -----------------------------------------------------------------------------
# GOOGLE_MAPS_API_KEY=
# ANALYTICS_API_KEY=
